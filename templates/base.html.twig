<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}

		{% endblock %}
	</head>
	<body {{ stimulus_controller('symfony/ux-swup/swup') }}>

		{% block header %}

			<header>

				<div class="bg-[url('https://i0.wp.com/scx2.b-cdn.net/gfx/news/hires/2018/computernetw.jpg')] opacity-80 relative">

					{% if app.user %}
						<div class="lg:w-1/4">
							<div class="sticky top-5">
								{% if app.user.avatar %}
									<img class="w-32 h-32 rounded-full border-4 border-white shadow-md mx-auto mb-4 object-cover" src="{{ asset(app.user.avatar) }}" alt="{{ app.user.firstname }}">
								{% endif %}
								<h2 class="text-lg text-center">Bonjour {{ app.user.firstname }},</h2>
							</div>
							<button>Déconnection</button>
						</div>
					{% endif %}

					<div class="bg-white bg-opacity-80 w-full h-48">

						<div class="flex flex-wrap justify-between">

							<div class="lg:hidden mt-12 ml-8 relative">
								<button class="peer focus:bg-[#F26C24] focus:text-gray-200 transition-all duration-200"><img class="w-16 h-16" src="{{ asset('/images/menu_burger_livres.png')}}"></button>

								<div class=' w-80 absolute top-5 z-10 after:content-[""] after:inline-block after:absolute after:top-0 after:bg-white/40 after:w-full after:h-full after:-z-20
																						after:blur-[2px] after:rounded-lg peer-focus:top-12 peer-focus:opacity-100 peer-focus:visible transition-all duration-300 invisible  opacity-0'>

									<ul class='py-6 px-3 flex flex-col gap-3'>
										<li class="mr-24">
											<a class="text-gray-800 hover:font-bold hover:text-[#F26C24]" href="{{ path('app_home') }}">Accueil</a>
										</li>
										<li class="mr-24">
											<a class="text-gray-800 font-bold hover:text-[#F26C24]" href="#">A propos</a>
										</li>
										<li class="mr-24">
											<a class="text-gray-800 font-bold hover:text-[#F26C24]" href="#">Contact</a>
										</li>
										<li class="mr-24">
											<a class="text-gray-800 font-bold hover:text-[#F26C24]" href="#">Témoignages</a>
										</li>
										<li class="">
											<a class="text-gray-800 font-bold hover:text-[#F26C24]" href="#">Partenaires</a>
										</li>
									</ul>

								</div>

							</div>

							<a href="{{ path('app_home') }}" class="lg:w-full lg:flex lg:justify-center mt-12 mr-8 lg:mr-0"><img class="w-16 h-16" src="{{ asset('/images/logocrmc.png')}}"></a>
							<div class="w-full mt-2 text-center">
								<h1>
									<span class="text-[#F26C24]">[</span>IT<span class="text-[#F26C24]">]</span>car.Net</h1>
							</div>

						</div>

					</div>

				</div>

				<nav class="hidden space-x-8 lg:flex lg:justify-center p-8 bg-white">
					<ul class="flex">
						<li class="mr-24">
							<a class="text-gray-800 font-bold hover:text-[#F26C24] hover:underline underline-offset-8" href="{{ path('app_home') }}">Accueil</a>
						</li>
						<li class="mr-24">
							<a class="text-gray-800 font-bold hover:text-[#F26C24] hover:underline underline-offset-8" href="#">A propos</a>
						</li>
						<li class="mr-24">
							<a class="text-gray-800 font-bold hover:text-[#F26C24] hover:underline underline-offset-8" href="#">Contact</a>
						</li>
						<li class="mr-24">
							<a class="text-gray-800 font-bold hover:text-[#F26C24] hover:underline underline-offset-8" href="#">Témoignages</a>
						</li>
						<li class="">
							<a class="text-gray-800 font-bold hover:text-[#F26C24] hover:underline underline-offset-8" href="#">Partenaires</a>
						</li>
					</ul>
				</nav>

			</header>

		{% endblock %}

		<main id="swup">
			{% block body %}{% endblock %}
		</main>

	</body>

</html>
