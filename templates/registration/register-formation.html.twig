{% extends "base.html.twig" %}
{# {% use "form.html.twig" %} #}
{% block body %}
{% include "header.html.twig" %}
	<div class="p-8 bg-desk bg-cover bg-no-repeat rounded my-4 max-w-screen-md mx-auto">
		{{ form_start(registrationFormFormation) }}
		<div class="mx-auto justify-center items-center max-w-screen-sm">
			<div class="text-center mb-8">
				<h1 class="text-2xl font-bold text-gray-800">Formulaire d'inscription</h1>
			</div>
			<div>
			{{form_label(registrationFormFormation.name, 'Nom du centre formation', {'label_attr': {'class': 'block text-gray-700 font-bold mt-2 mb-1'}}) }}
            {{form_widget(registrationFormFormation.name, {'attr': {'class': 'form-input w-full rounded put-register'}})}}
            </div>
            <div>
            {{form_label(registrationFormFormation.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-bold mt-2 mb-1'}}) }}
            {{form_widget(registrationFormFormation.email, {'attr': {'class': 'form-input w-full rounded'}})}}
            </div>
            <div>
            {{form_label(registrationFormFormation.siret, 'Num√©ro de Siret', {'label_attr': {'class': 'block text-gray-700 font-bold mt-2 mb-1'}}) }}
            {{form_widget(registrationFormFormation.siret, {'attr': {'class': 'form-input w-full rounded'}})}}
            </div>
            <div>
            {{ form_label(registrationFormFormation.plainPassword.first, 'Mot de passe', {'label_attr' : {'class': 'block text-gray-700 font-bold mt-2 mb-1'}}) }}
            {{ form_widget(registrationFormFormation.plainPassword.first, {'attr': {'class': 'form-input w-full rounded'}}) }}
            </div>
            <div>
            {{ form_label(registrationFormFormation.plainPassword.second, 'Confirmer le mot de passe',  {'label_attr': {'class': 'block text-gray-700 font-bold mt-2 mb-1'}}) }}
            {{ form_widget(registrationFormFormation.plainPassword.second, {'attr': {'class': 'form-input w-full rounded'}}) }}
            </div>
            <div class="flex items-center mt-4 mb-4">
            {{form_widget(registrationFormFormation.agreeTerms, {'attr': {'class': 'mr-2 align-middle'}})}}
            {{form_label(registrationFormFormation.agreeTerms, 'Accepter les conditions', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
            </div>
            <div class="w-1/3 mx-auto bg-but text-center rounded">
                <button formnovalidate class="inline-block text-white p-2 font-md font-bold">S'inscrire</button>
            </div>
        </div>
		{{ form_end(registrationFormFormation) }}
	</div>
{% endblock %}
