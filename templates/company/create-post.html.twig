{% extends 'base.html.twig' %}

{% block content %}
{% include "header.html.twig" %}

<div class="bg-companyForm">  
    {{ form_start(form) }}
    <div class="flex justify-center items-center h-screen">
        <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-10">
            <h1 class="text-xl font-bold mb-4 text-center">Cr√©er une nouvelle publication</h1>
            <div class="mb-4">
                {{ form_label(form.title, 'Title', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-input w-full'}}) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-input w-full'}}) }}
            </div>
            <div class="mb-4">
                {{ form_label(form.content, 'Content', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.content, {'attr': {'class': 'form-textarea w-full h-48'}}) }}
                <button type="submit" class="bg-but ml-3 mt-5 items-center justify-center px-6 py-2 border border-transparent text-sm leading-5 font-medium rounded-md text-white focus:outline-none focus:shadow-outline-blue">
                Publier
                </button> 
            </div>
        </div>
    </div>  
    {{ form_end(form) }}
</div> 
 


{% endblock %}
